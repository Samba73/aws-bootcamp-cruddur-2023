#! /usr/bin/bash

ABS_PATH=$(readlink -f "$0")
BACKEND_PATH=$(dirname $ABS_PATH)
BIN_PATH=$(dirname $BACKEND_PATH)
PROJECT_PATH=$(dirname $BIN_PATH)
FRONTEND_FLASK_PATH="$PROJECT_PATH/frontend-react-js"

docker build \
-f "$BACKEND_FLASK_PATH/Dockerfile.prod" \
-t frontend-react-js \
"$FRONTEND_FLASK_PATH/."