#! /usr/bin/env python3
import boto3
import sys

attr = {
    'endpoint_url': 'http://localhost:8000'
}
if len(sys.argv) == 2:
    if "prod" in sys.argv[1]:
        attr = {}

import boto3

ddb = boto3.resource('dynamodb', **attr)

tableName = "cruddur-message"

table = ddb.Table(tableName)

response = table.scan()
items = response['Items']
for item in items:
    print(item)