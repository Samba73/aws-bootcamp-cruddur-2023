#!/usr/bin/bash
set -e
if [ "$#" = 0 ]
then
    echo "No arguments provided, Table name is required"
    exit 1
fi
if [ "$1" = "prod" ]
then
    echo "Table should be provided as first argument"
    exit 1
fi    
if [ "$2" = "prod" ]
then
    ENDPOINT_URL=""
else
    ENDPOINT_URL="--endpoint-url=http://localhost:8000"
fi

aws dynamodb scan  --table-name $1 $ENDPOINT_URL 