#!/usr/bin/bash
set -e
if [ "$#" = 0 ]
then
    echo "No arguments provided, Task ID and Container name required"
    exit 1
fi
if [ -z "$1" ]
then
    echo "TASK ID should be provided as first argument"
    exit 1
else
    TASK_ID=$1   
fi    
if [ -z "$2" ]
then
    echo "Container Name should be provided as second argument"
    exit 1
else
    CONTAINER_NAME=$2    
fi
aws ecs execute-command  \
    --cluster cruddur \
    --task $TASK_ID \
    --container $CONTAINER_NAME \
    --command "/bin/bash" \
    --interactive
